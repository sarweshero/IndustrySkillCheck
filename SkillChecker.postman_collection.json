{
  "info": {
    "name": "SkillChecker API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "jwtToken",
      "value": ""
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "userId",
      "value": ""
    },
    {
      "key": "skillId",
      "value": ""
    },
    {
      "key": "evidenceId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Student One\",\n  \"email\": \"student1@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201', () => pm.response.code === 201);",
                  "const json = pm.response.json();",
                  "pm.environment.set('userId', json.id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student1@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.code === 200);",
                  "const json = pm.response.json();",
                  "pm.environment.set('jwtToken', json.token);",
                  "pm.environment.set('role', json.role);"
                ]
              }
            }
          ]
        },
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": "{{baseUrl}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"AdminPassw0rd!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', () => pm.response.code === 200);",
                  "const json = pm.response.json();",
                  "pm.environment.set('adminToken', json.token);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Create Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/students",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Student Two\",\n  \"email\": \"student2@example.com\",\n  \"password\": \"Passw0rd!\",\n  \"active\": true\n}"
            }
          }
        },
        {
          "name": "Update Student",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/students/{{userId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Student Two Updated\",\n  \"email\": \"student2@example.com\",\n  \"password\": \"Passw0rd!\",\n  \"active\": true\n}"
            }
          }
        },
        {
          "name": "Deactivate Student",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/students/{{userId}}"
          }
        },
        {
          "name": "Create Skill",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/skills",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Java\",\n  \"description\": \"Core Java programming\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "pm.environment.set('skillId', json.id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Update Skill",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/skills/{{skillId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Java\",\n  \"description\": \"Updated Java skill\"\n}"
            }
          }
        },
        {
          "name": "Evaluate Competency",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/evaluate/{{userId}}"
          }
        },
        {
          "name": "Top Students",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/top-students"
          }
        },
        {
          "name": "Skill Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/admin/skill-summary"
          }
        }
      ]
    },
    {
      "name": "Student",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/student/me"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/student/profile",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Student One Updated\",\n  \"email\": \"student1@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            }
          }
        },
        {
          "name": "Submit Evidence",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/student/evidence",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"PROJECT\",\n  \"reference\": \"Built a Java REST API\",\n  \"skills\": [\n    {\n      \"skillId\": {{skillId}},\n      \"weight\": 2\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "Get Competency",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/student/competency"
          }
        }
      ]
    },
    {
      "name": "Skills (Read)",
      "item": [
        {
          "name": "List Skills",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/skills"
          }
        },
        {
          "name": "Get Skill By Id",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/skills/{{skillId}}"
          }
        }
      ]
    },
    {
      "name": "Admin Legacy",
      "item": [
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/users",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin Managed\",\n  \"email\": \"admin.managed@example.com\",\n  \"role\": \"STUDENT\"\n}"
            }
          }
        },
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/users"
          }
        },
        {
          "name": "Get User By Id",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/users/{{userId}}"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/users/{{userId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin Updated\",\n  \"email\": \"admin.managed@example.com\",\n  \"role\": \"STUDENT\"\n}"
            }
          }
        },
        {
          "name": "Deactivate User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/users/{{userId}}"
          }
        },
        {
          "name": "Submit Evidence",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/evidence",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": {{userId}},\n  \"type\": \"PROJECT\",\n  \"reference\": \"Built a Java REST API\",\n  \"skills\": [\n    {\n      \"skillId\": {{skillId}},\n      \"weight\": 2\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "Get Evidence By Student",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/evidence/student/{{userId}}"
          }
        },
        {
          "name": "Get Evidence By Id",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/evidence/{{evidenceId}}"
          }
        },
        {
          "name": "Delete Evidence",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/evidence/{{evidenceId}}"
          }
        },
        {
          "name": "Evaluate Competency",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/competencies/evaluate/{{userId}}"
          }
        },
        {
          "name": "Get Competencies By Student",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": "{{baseUrl}}/api/competencies/student/{{userId}}"
          }
        }
      ]
    }
  ]
}
